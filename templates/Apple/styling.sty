% styling.sty
%----------------------------------------------------------------------------------------
%	PACKAGES AND SETUP
%----------------------------------------------------------------------------------------

\ProvidesPackage{styling}
\usepackage{../base-styling} % inherits all the styling (commands and colors) from base.sty

%----------------------------------------------------------------------------------------
%	DEFINE BASE COLORS
%----------------------------------------------------------------------------------------
\colorlet{secondarycolor}{apple-red} % we set the company icon as the secondarycolor
% since most company colors are light, so we darken it a bit to get the primarycolor
\colorlet{primarycolor}{black!33!secondarycolor}

%----------------------------------------------------------------------------------------
%	SET HEADER
%----------------------------------------------------------------------------------------
\newcommand{\companyicon}{../../assets/icons/apple.jpg} % path to the company icon
\newcommand{\iconsize}{3em} % change this to make the icon bigger
\newcommand{\headerboxraise}{0.75em} % change this to move the header up or down

%----------------------------------------------------------------------------------------
%	ADD BORDER COLORING
%----------------------------------------------------------------------------------------
\colorlet{bordercolor1}{apple-green} % Top-left quadrant color
\colorlet{bordercolor2}{apple-blue} % Top-right quadrant color
\colorlet{bordercolor3}{apple-orange} % Bottom-left quadrant color
\colorlet{bordercolor4}{apple-purple} % Bottom-right quadrant color