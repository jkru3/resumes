% Set sans-serif as default font
\renewcommand\familydefault{\sfdefault}

% Define colors
\definecolor{primarycolor}{HTML}{0266E4}
\definecolor{secondarycolor}{HTML}{0182FF}
\definecolor{hyperlinkcolor}{HTML}{011627}

% Define border colors
\definecolor{bordercolor1}{HTML}{FF0000} % Top-left quadrant color
\definecolor{bordercolor2}{HTML}{00FF00} % Top-right quadrant color
\definecolor{bordercolor3}{HTML}{0000FF} % Bottom-left quadrant color
\definecolor{bordercolor4}{HTML}{FFFF00} % Bottom-right quadrant color

% Line spacing
\setstretch{1.08}

% Section title formatting
\titleformat{\section}{\large\bfseries\color{primarycolor}}{}{0em}{}[\titlerule]

% Customize itemize environment
\setlist[itemize]{leftmargin=*,nosep}

%----------------------------------------------------------------------------------------
%	CUSTOM COMMANDS
%----------------------------------------------------------------------------------------

% Command for the header section
\newcolumntype{C}{>{\centering\arraybackslash}X}

% Then modify the header command
\newcommand{\header}[2]{
    \begin{tabularx}{\linewidth}{@{} C @{}}
        \Huge{Joseph L. Krueger} \\[7.5pt]
        #1 \ {\Large #2} \\  % Made #2 larger with \Large
        \href{mailto:josephfkrueger@protonmail.com}{\faEnvelope\ josephkrueger@protonmail.com} \ $|$ 
        {\faMapPin\ Seattle, WA} \ $|$ 
        {\faMobile\ 360-763-3490} \\

        \href{https://linkedin.com/in/jkru3}{\faLinkedin\ linkedin.com/in/jkru3} \ $|$ 
        \href{https://joey-krueger.com}{\faGlobeAmericas\ https://joey-krueger.com} \\
    \end{tabularx}
}

\newcommand{\educationentry}[5]{
    \begin{tabularx}{\textwidth}{lX}
        \textbf{#1} & \hfill {\textcolor{primarycolor}{#3}} $|$ #4 \\[0pt]
        #2 & \hfill #5 \\[0pt]
    \end{tabularx}
}

\newcommand{\linkentry}[5]{
    \begin{tabularx}{\textwidth}{lX}
        \href{#3}{\textbf{#1,} #2 \small{\faLink}} & \hfill {\textcolor{primarycolor}{#4}} $|$ #5 \\[0pt]
    \end{tabularx}
}

\newcommand{\projectentry}[4]{
    \begin{tabularx}{\textwidth}{lX}
        \href{#3}{\textbf{#1,} #2 \small{\faLink}} & \hfill {\textcolor{primarycolor}{#4}} \\[0pt]
    \end{tabularx}
}

% Remove page numbers
\pagestyle{empty}

% Add border to each page
\AddToShipoutPictureBG{%
    \begin{tikzpicture}[remember picture, overlay]
        % Top-left quadrant
        \draw[bordercolor1, line width=3pt] (current page.north west) -- (current page.west);
        \draw[bordercolor1, line width=3pt] (current page.north west) -- (current page.north);
        % Top-right quadrant
        \draw[bordercolor2, line width=3pt] (current page.north east) -- (current page.east);
        \draw[bordercolor2, line width=3pt] (current page.north east) -- (current page.north);
        % Bottom-left quadrant
        \draw[bordercolor3, line width=3pt] (current page.south west) -- (current page.west);
        \draw[bordercolor3, line width=3pt] (current page.south west) -- (current page.south);
        % Bottom-right quadrant
        \draw[bordercolor4, line width=3pt] (current page.south east) -- (current page.east);
        \draw[bordercolor4, line width=3pt] (current page.south east) -- (current page.south);
    \end{tikzpicture}
}