% remove page numbers
\pagestyle{empty}

% renders borders
\AddToShipoutPictureBG{%
    \begin{tikzpicture}[remember picture, overlay]
        % top-left quadrant
        \draw[bordercolor1, line width=6pt] (current page.north west) -- (current page.west);
        \draw[bordercolor1, line width=6pt] (current page.north west) -- (current page.north);
        % top-right quadrant
        \draw[bordercolor2, line width=6pt] (current page.north east) -- (current page.east);
        \draw[bordercolor2, line width=6pt] (current page.north east) -- (current page.north);
        % bottom-left quadrant
        \draw[bordercolor3, line width=6pt] (current page.south west) -- (current page.west);
        \draw[bordercolor3, line width=6pt] (current page.south west) -- (current page.south);
        % bottom-right quadrant
        \draw[bordercolor4, line width=6pt] (current page.south east) -- (current page.east);
        \draw[bordercolor4, line width=6pt] (current page.south east) -- (current page.south);
    \end{tikzpicture}
}

